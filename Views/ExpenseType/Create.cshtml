@model InAndOut.Models.ExpenseType

<div class="container border">
    <form method="post" asp-action="Create">
        <div asp-validation-summary="All" class="text-danger mt-2"></div>
        <div class="form-group row">
            <div class="text-primary col-12 pt-2">
                <h2>Create new expense type</h2>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <input type="submit" class="btn btn-primary" />
                <a class="btn btn-success ml-1" asp-action="Index" asp-controller="ExpenseType">Go to Index</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
