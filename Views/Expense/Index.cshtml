@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-2">
    <div class="row pt-4 pb-2">
        <div class="col-9">
            <h2 class="text-primary">Expenses</h2>
        </div>
        <div class="col-3 text-right">
            <a asp-action="Create" class="btn btn-primary text-white">New expense</a>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <tr>
            <th width="25%">Name</th>
            <th width="25%">Amount</th>
            <th width="25%">Expense Type</th>
            <th width="25%">Changes</th>
        </tr>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Amount</td>
                    <td>@ViewBag.expenseDict[item.ExpenseTypeId]</td>
                    <td class="d-flex">
                        <form method="post" class="w-75" asp-action="Delete" asp-route-Id="@item.Id">
                            <button class="btn btn-danger w-100" type="submit">Delete</button>
                        </form>
                        <a class="btn btn-primary ml-1 w-75" asp-action="Edit" asp-route-Id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No data found</td>
            </tr>
        }
    </table>
</div>
